<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Apps</title>
    <link rel="stylesheet" href="/css/style.css">
    <script defer src="/js/script.js"></script>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="all-apps-body">
        <div class="all-apps-header">
            <h1>Your Apps</h1>
            <a class="add-app-link" href="/users/<%= user._id %>/applications/new">Add an App</a>
        </div>
        <% if(applications.length === 0) { %>
            <h4>Please click "Add an App" to add your first application</h4>
        <% } %>
        <ul>
            <% applications.forEach(application => { %>
                <li>
                    <a href="/users/<%= user._id %>/applications/<%= application._id %>">
                        <%= application.title %> at <%= application.company %></li>
                    </a>
            <% })%>
        </ul>
    </div>
</body>
</html>